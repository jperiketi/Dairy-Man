<!-- 
    this file has basic layout for making the bill pdf,
    this will return an html page with the data,
    which will later be converted into pdf 
-->
<html>
    <head>
        <style>
            table{
                font-family: Arial, sans-serif;
                border-collapse: collapse;
                width: 100%;
            }
            td,th{
                border: 1px solid black;
                text-align: left;
                padding: 8px;
            }
        </style>
    </head>
    <body>
        <h3 style="text-align: center;">Dairy Management System</h3>
        <table>
            <tr>
                <th>Name: <%= name %></th>
                <th>Email: <%= email %></th>
            </tr>
            <tr>
                <th>Contact Number: <%= contactNumber %></th>
                <th>Payment Method: <%= paymentMethod %></th>
            </tr>
        </table>
        <h3> products Details : </h3>
        <table>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Sub Total</th>
            </tr>
            <% if(productsDetails.length >0){ %>
                <% productsDetails.forEach(products =>{ %>
                <tr>
                    <td><%= products.name %></td>
                    <td><%= products.category %></td>
                    <td><%= products.quantity %></td>
                    <td><%= products.price %></td>
                    <td><%= products.total %></td>
                </tr>
                <%});%>
                <%}%>
        </table>
        <h3>Total: <%= totalAmount%></h3>
        <h3>Thank you ! hope to see you again!</h3>

    </body>
</html>